<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User">


    <!--상단 바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#9CA55F"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이 페이지"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:gravity="center"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/user"/>
        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="30dp"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/userLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9CA55F"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:text="로그아웃"
            android:textSize="25dp"/>

    </LinearLayout>

    <!--하단 바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#d0dac5"
        android:gravity="center_vertical"
        >

        <ImageButton
            android:id="@+id/imgUserCalendar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/calendar"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/imgUserTip"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/idea"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/imgUserHome"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/imgUserRec"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/quality"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/user"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            />
    </LinearLayout>


</LinearLayout>